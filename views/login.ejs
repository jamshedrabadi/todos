<%- include('./partials/prefix-html.ejs'); %>

<div class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-dark"></div>

                <div class="card bg-white shadow-lg">
                    <div class="card-body p-5">
                        <form class="mb-4 mt-md-4" action="login" method="POST">
                            <h2 class="fw-bold mb-4 text-uppercase">TODOs</h2>

                            <!-- <p class="mb-5">Please enter your email and password!</p> -->

                            <% if (myerrors.length) { %>
                            <div class="alert alert-dark mb-4"><%- myerrors[0].errorMessage %></div>
                            <% } %>

                            <div class="mb-4">
                                <label for="username" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="username" name="username">
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password">
                            </div>

                            <!-- <p class="small">
                                <a class="text-primary" href="forget-password.html">Forgot password?</a>
                            </p> -->

                            <div class="d-grid">
                                <button class="btn btn-outline-dark" type="submit" name="login-btn" id="login-btn">Login</button>
                            </div>
                        </form>

                        <!-- <div>
                            <p class="mb-0 text-center">
                                Don't have an account?
                                <a href="signup.html" class="text-primary fw-bold">Sign Up</a>
                            </p>
                        </div> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer-links.ejs'); %>

<!-- Scripts Start -->

<script>
    // Start loader on login button click
    $('#login-btn').click((event) => {
        $(".loader").css("display", "block");
    });
</script>

<!-- Scripts End -->

