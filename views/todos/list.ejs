<%- include('../partials/prefix-html.ejs'); %>
<%- include('../partials/navbar.ejs', { loggedInUserData }); %>
<%- include('../partials/sidebar.ejs'); %>

<!-- View Start -->

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th class="page-header-content">
                    <h2 class="page-header-text">Todos</h2>
                </th>
                <th class="page-header-content page-header-btn">
                    <a class="btn btn-dark" href="/todos/add">
                        <span class="page-header-add-btn-text">Add</span>
                        <i class="fa fa-circle-plus page-header-add-btn-icon"></i>
                    </a>
                </th>
            </tr>
        </thead>
    </table>
</div>

<div class="table-responsive">
    <table class="table table-bordered">
        <% if (todos.length) { %>
        <thead>
            <tr>
                <th class="table-cell">Title</th>
                <th class="table-cell">Body</th>
                <th class="table-cell">Status</th>
                <th class="table-cell">Created At</th>
                <th class="table-cell">Action</th>
            </tr>
        </thead>
        <tbody>
            <% todos.forEach((todo) => { %>
            <tr>
                <td class="table-cell"><%- todo.title %></td>
                <td class="table-cell"><%- todo.body %></td>
                <td class="table-cell"><%- todo.status %></td>
                <td class="table-cell"><%- moment(todo.createdAt).format('MMMM Do, YYYY HH:mm:ss') %></td>
                <td class="table-cell">
                    <i class="fa fa-edit icon-action"></i>
                    <i class="fa fa-trash icon-action"></i>
                </td>
            </tr>
            <% }); %>
        </tbody>
        <% } else { %>
        <thead>
            <tr>
                <th class="table-cell text-center">No Data Found</th>
            </tr>
        </thead>
        <% } %>
    </table>
</div>

<!-- View End -->

